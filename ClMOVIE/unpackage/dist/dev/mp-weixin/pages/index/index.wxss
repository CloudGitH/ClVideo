.popular-hero-list {
  width: 750rpx;
  height: 358rpx;
  white-space: nowrap;
}
.popular-hero-item {
  display: inline-block;
  width: 200rpx;
  padding-left: 30rpx;
}
.popular-hero-item:last-child {
  padding-right: 30rpx;
}
.popular-hero-img {
  display: block;
  width: 100%;
  height: 270rpx;
}
.popular-hero-name {
  margin-top: 16rpx;
  width: 100%;
  font-size: 26rpx;
  line-height: 26rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
